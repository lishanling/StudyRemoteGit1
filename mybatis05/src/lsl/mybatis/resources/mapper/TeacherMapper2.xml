<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lsl.mybatis.mapper.TeacherMapper">
	<!-- 分页查询语句 -->
	<resultMap type="PaginationBean" id="PaginationBeanMap">
		<collection property="rows" column="{pageSize=pageSize,currPage=currPage}"
			ofType="Teacher"  select="selectRows"/>
	</resultMap>
	<select id="partTeachers" parameterType="PaginationBean"
		resultMap="PaginationBeanMap">
		select count(1) total, ceil(count(1)/ ${pageSize}) totalPage,
		${pageSize} pageSize,${currPage} currPage from teacher
	</select>

	<select id="selectRows" resultType="Teacher">
		select * from
		(select t.*,rownum r from teacher t
		where ${pageSize}*${currPage}>=rownum)
		where
		r>${pageSize}*(${currPage}-1)
	</select>
</mapper>